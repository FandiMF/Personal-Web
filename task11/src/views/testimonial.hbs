<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testimonial</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com"/> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <script src="https://kit.fontawesome.com/7e6368bcc1.js" crossorigin="anonymous"></script> 
    <!-- <script src="assets/js/testimonial-new.js"></script> -->
    <script defer src="assets/js/ajax.js"></script>

</head>
<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary px-5">
        <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="assets/img/brandred.png" alt="logo" style="width: 50px;">
                </a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/project">Add Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/testimonial">Testimonial</a>
              </li>
            </ul>
            <form class="d-flex" role="search">
              <a type="button" class="btn btn-dark" href="/contact-me">Contact Me</a>
            </form>
          </div>
        </div>
      </nav>
    <!-- navbar -->

    <!-- content -->
    <section class="sec-project px-5 pt-3 pb-5">
        <div class="tittle mt-5">
          <h1 class="text-center fw-bold">MY TESTIMONIAL</h1>
        </div>
  
        <div class="rate-group text-center mt-5">
          <h5>Rating By Star</h5>
          <div class="btn-rate mt-3">
            <button
              class="px-2 border-0 bg-dark text-white"
              onclick="allTestimonial()"
            >
              All <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
            </button>
            <button
              class="px-2 border-0 bg-dark text-white"
              onclick="filterTestimonial(1)"
            >
              1 <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
            </button>
            <button
              class="px-2 border-0 bg-dark text-white"
              onclick="filterTestimonial(2)"
            >
              2 <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
            </button>
            <button
              class="px-2 border-0 bg-dark text-white"
              onclick="filterTestimonial(3)"
            >
              3 <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
            </button>
            <button
              class="px-2 border-0 bg-dark text-white"
              onclick="filterTestimonial(4)"
            >
              4 <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
            </button>
            <button
              class="px-2 border-0 bg-dark text-white"
              onclick="filterTestimonial(5)"
            >
              5 <i class="fa-solid fa-star fa-sm" style="color: #fff"></i>
            </button>
          </div>
        </div>
  
        <!-- Content Testimonial -->
        <div
          class="container-myProject d-flex flex-wrap justify-content-center mt-5"
          id="testimonials"
        >
          <!-- Data added with javascript / dynamis -->
        </div>
        <!-- Close Content Testimonial -->
      </section>
        
        
    

    <!-- <script src="assets/js/testimonial.js"></script> -->
    

   

</body>
</html>