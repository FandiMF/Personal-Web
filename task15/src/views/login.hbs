<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login {{tittleTab}}</title>
    <script
      src="https://kit.fontawesome.com/7e6368bcc1.js"
      crossorigin="anonymous"
    ></script>
     <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  />
</head>
<body>
    <!-- navigation bar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary px-5">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="../assets/img/brandred.png" alt="logo" style="width: 50px;" />
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link " aria-current="page" href="/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/project">Add Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/testimonial">Testimonial</a>
              </li>
            </ul>
          
          <div class="d-flex justift-content-end">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item me-4">
                <a class="nav-link " href="/register">Register</a>
              </li>
                <li class="nav-item ms-2">
                  <a class="nav-link nav-active fw-bold" href="/login">Login</a>
                </li>
              </ul>
            </div>
          <form class="d-flex" role="search">
            <a type="submit" class="btn btn-dark ms-5" href="/contact-me">Contact Me</a>
          </form>
        </div>
      </div>
    </nav>
  <!-- navigation bar  -->

  {{#if messages.failed}}
    <div class="alert alert-danger" role="alert">
      <div class="container">
        {{messages.failed}}
      </div>
    </div>
  {{/if}}

    <!-- content -->
    <div class="me-3 ms-3 pb-5" >
      <div class="row justify-content-center">
        <div class="col-lg-6 mt-3">
           <h2 class="fw-bold text-center mt-5 mb-4">LOGIN</h2>

          <form method="POST" action="/login">
            <div class="mb-3">
              <label  class="form-label fe-medium" for="inputEmail">Email</label>
              <input name="email" type="text" class="form-control shadow" id="inputEmail"  placeholder="" />
            </div>
            <div class="mb-3">
              <label class="form-label fe-medium" for="password">Password</label>
              <input name="password" type="password" class="form-control shadow" id="password" />
            </div>
            <div class="d-flex justify-content-end container-btn mt-4 pt-2">
              <button type="submit" value="submit" class="btn btn-submit bg-dark text-light rounded-5 pe-4 ps-4">Submit</button>
            </div>
          </form>
        </div>
      </div>  
    </div>
  
</body>
</html>