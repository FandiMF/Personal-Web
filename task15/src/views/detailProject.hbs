<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Project{{tittleTab}}  </title>
    <link rel="stylesheet" href="assets/css/detail.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <script src="https://kit.fontawesome.com/7e6368bcc1.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
     <!-- navigation bar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary px-5">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="../assets/img/brandred.png" alt="logo" style="width: 50px;" />
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/project">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
        </ul>
        {{#if isLogin}}
          <div class="d-flex justift-content-end">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item me-4">
                <a class="nav-link " >Hello {{user.name}}</a>
              </li>
              <li class="nav-item ms-2">
                <a class="nav-link " href="/login">Logout</a>
              </li>
            </ul>
          </div>

        {{else}}
          <div class="d-flex justift-content-end">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item me-4">
                <a class="nav-link " href="/register">Register</a>
              </li>
              <li class="nav-item ms-2">
                <a class="nav-link " href="/login">Login</a>
              </li>
            </ul>
          </div>
        {{/if}}
        <form class="d-flex" role="search">
          <a type="submit" class="btn btn-dark ms-5" href="/contact-me">Contact Me</a>
        </form>
      </div>
    </div>
  </nav>
  <!-- navigation bar  -->

    <!-- content -->
      <!-- Content Project Detail -->
      <section class="container pb-5">
        <div class="text-center mt-3">
          <h1 class="fw-bold mt-5" id="projectName">{{data.name}}</h1>
        </div>
        <!-- Flex -->
        <div class="d-lg-flex">
          <!-- Col image -->
          <div class="col-lg-7 col-sm-12 mt-5 col-img pe-4">
            <img
              src="../assets/img/sultan syahrir.jpg"
              class="img-fluid"
              id="image"
              alt=""
            />
          </div>
          <!-- Close Col image -->
  
          <!-- Col Time Info -->
          <div class="col-lg-5 col-sm-12 mt-5 col-info ps-3">
            <!-- Duration Group -->
            <div class="duration-group">
              <h4 class="fs-2">Duration</h4>
              <!-- Calcu Group -->
              <div class="calcu-group d-flex align-items-center">
                <img src="../assets/img/calculator.png" class="me-2" alt="" />
                <p class="mt-3 text-secondary" id="thisTime">
                  {{fullStartDate}}
                  -
                  {{fullEndDate}}
                </p>
              </div>
              <!-- Close Calcu Group -->
  
              <!-- Clock Group -->
              <div class="clock-group d-flex align-items-center">
                <img src="../assets/img/clock.png" class="me-2" alt="" />
                <p class="mt-3 text-secondary" id="duration">{{data.timeproject}}</p>
              </div>
              <!-- Close Clock Group -->
            </div>
            <!-- Close Duration Group -->
  
            <!-- Tecnologies Group -->
            <div class="Tech-group mt-5">
              <h4 class="fs-2">Technologies</h4>
  
              <div class="icon-tech d-flex mt-3">
                {{#each data.technologies}}
                 <div class="d-flex flex-nowrap mt-4">
                  <div class="col-lg-12 d-flex align-items-center me-3"><i
                      class="fa-brands fa-{{this}} fa-2xl me-1"
                    ></i>
                    <span>{{this}}</span></div>
                </div>
                {{/each}}
              </div>
            </div>
            <!-- Close Technologies Group -->
          </div>
          <!-- Close Col Time Info -->
        </div>
        <!-- Close flex -->
  
        <div class="paraf-content mt-5">
          <p class="paraf" id="desc">
           {{data.description}}
          </p>
        </div>
      </section>
    <!-- content -->

    <script src="assets/js/detail-project.js"></script>
    
</body>
</html>